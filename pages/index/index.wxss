/* Container */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f0f4f8 0%, #d9e2ec 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

/* Upload Section */
.upload-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  max-width: 500rpx;
  transition: transform 0.2s;
}

.upload-section:hover {
  transform: translateY(-4rpx);
}

.upload-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  border: 2rpx dashed #cccccc;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: border-color 0.3s;
}

.upload-placeholder::after {
  content: '+';
  font-size: 60rpx;
  color: #cccccc;
  font-weight: bold;
}

.upload-placeholder:hover {
  border-color: #07c160;
}

.upload-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  object-fit: cover;
  border: 2rpx solid #e0e0e0;
}

.upload-section text {
  font-size: 28;
  font-weight: 500;
  color: #444444;
}

/* Input */
.input {
  width: 100%;
  max-width: 500rpx;
  padding: 20rpx;
  font-size: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: border-color 0.3s;
}

.input:focus {
  border-color: #07c160;
  outline: none;
}

/* Try-on Button */
button {
  background: linear-gradient(90deg, #07c160 0%, #05a048 100%);
  color: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.2);
  width: 100%;
  max-width: 500rpx;
  transition: transform 0.2s, box-shadow 0.2s;
}

button:hover {
  transform: scale(1.02);
  box-shadow: 0 6rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* Result Section */
.result-section {
  width: 100%;
  max-width: 600rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.result-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.result-img {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
}

.download-btn {
  background: linear-gradient(90deg, #3498db 0%, #2980b9 100%);
  color: #ffffff;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(52, 152, 219, 0.2);
  width: auto;
  transition: transform 0.2s;
}

.download-btn:hover {
  transform: scale(1.02);
}